<script type="text/javascript">
head.ready(function () {
  $('.cta, .ctal').click(function() {
    $('.ui.modal.signup').modal('show');
  });

  $.fn.api.settings.api = {
    'signup'  : 'https://pegke.com/api/user/register',
    'support' : 'https://pegke.com/api/user/register',
    'registermobile'  : 'https://pegke.com/api/user/register'
  };

  $(document).ready(function() {
    $('.costs button').click(function() {
      $('.costs button').removeClass('positive');
      var selcur = $(this).attr('data-curr');
      $(this).addClass('positive');
      if( selcur == 'usd' ) {
        $('.currency').text('$');
        animateUpdate(0.42, 0.006, 3, 'amt');
      } else if( selcur == 'inr' ) {
        $('.currency').text('₹');
        animateUpdate(0.006, 0.42, 2, 'amt');
      }
    });

    if ($('#pegkestat').length) {
      var dt = new Date();
      $.getJSON( "/status.json", function( data ) {
        $('#lstmod').text(dt);
        var items = [];
        $.each( data, function( key, val) {

          items.push( '<div class="item"> \
              <div class="right floated content"> \
